{
  "expo": {
    "name": "TRUE NORTH TRIPS",
    "slug": "yk-companion",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a1128"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.truenorthtrips.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show nearby attractions and provide relevant recommendations.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We need your location to send aurora alerts when you're near good viewing spots.",
        "NSCameraUsageDescription": "Allow camera access to capture and share your northern adventure photos.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a1128"
      },
      "package": "com.truenorthtrips.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "CAMERA",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": ["expo-router", "expo-location", "expo-notifications"],
    "scheme": "truenorthtrips",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "aad86f8e-35b0-439e-8733-30be6331cc39"
      }
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#00ff88"
    },
    "owner": "charleynapalm",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/aad86f8e-35b0-439e-8733-30be6331cc39"
    }
  }
}
