{
  "name": "yk-companion",
  "version": "1.0.0",
  "private": true,
  "description": "YKBuddy - Your Yellowknife Companion. Complete platform for visiting, living in, or moving to Yellowknife featuring Aurora Live Events, Garage Sale Planner, and more.",
  "scripts": {
    "dev:web": "cd apps/web && npm run dev",
    "build:web": "cd apps/web && npm run build",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "cd apps/web && npm run lint",
    "lint:fix": "cd apps/web && npm run lint:fix",
    "test": "cd apps/web && npm run test",
    "test:ci": "cd apps/web && npm run test:ci",
    "validate": "npm run format:check && npm run lint && npm run test:ci",
    "prepare": "husky install",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/.next apps/*/dist apps/*/build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/yk-trip-planner"
  },
  "keywords": [
    "yellowknife",
    "tourism",
    "trip-planning",
    "northern-canada",
    "aurora",
    "travel"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-keywords": "^5.1.0"
  }
}
